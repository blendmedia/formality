@import "../common"

.Select
  &::before
    content: ""
    width: 0
    height: 0
    border-style: solid
    border-width: 6.9px 4px 0 4px
    border-color: #333333 transparent transparent transparent
    position: absolute
    right: 63px
    bottom: 63px
    pointer-events: none

  &--working
    &::before
      right: 63px
    &::after
      content: ""
      width: 25px
      height: 25px
      background: #777
      display: block
      position: absolute
      right: 13px
      bottom: 56px
      animation: spin 1s linear infinite


  &__error
    color: #C00
    font-size: 11px
    height: 1em
    display: block
    margin-bottom: 5px
    opacity: 1
    transition: opacity 0.4s ease-in-out, color 0.4s ease-in-out
    &:empty
      opacity: 0

  &__control
    box-sizing: border-box
    padding: 10px
    border: 1px solid #CCC
    border-radius: 5px
    width: 100%
    outline: none
    display: block
    transition: border-color 0.4s ease-in-out
    -webkit-appearance: none
    &:focus, &:active
      border-color: #34A9E0

  &--error
    .Select__control
      border-color: #C00


  &--error--req
    .Select__control
      border-color: #E0A028
    .Select__error
      color: #E0A028

@keyframes spin
  0%
    transform: rotate(0turn)
  100%
    transform: rotate(1turn)
