body
  font-family: Arial

h1
  font-size: 16px
  font-weight: normal
  text-align: center
  margin: 45px 0 0

.Input
  margin: 10px auto
  width: 400px
  box-sizing: border-box
  position: relative

  &--working
    padding-right: 50px
    &::after
      content: ""
      width: 25px
      height: 25px
      background: #777
      display: block
      position: absolute
      right: 0
      bottom: 6px
      animation: spin 1s linear infinite


  &__error
    color: #C00
    font-size: 11px
    height: 1em
    display: block
    margin-bottom: 5px

  &__control
    box-sizing: border-box
    padding: 10px
    border: 1px solid #CCC
    border-radius: 5px
    width: 100%
    outline: none
    display: block

  &--error
    .Input__control
      border-color: #C00

  &--error--req
    .Input__control
      border-color: #E0A028
    .Input__error
      color: #E0A028

@keyframes spin
  0%
    transform: rotate(0turn)
  100%
    transform: rotate(1turn)
