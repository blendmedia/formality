@import "../common";

.Checkbox
  &--checked
    color: #090

  &--working
    padding-right: 50px
    &::after
      content: ""
      width: 25px
      height: 25px
      background: #777
      display: block
      position: absolute
      right: 13px
      bottom: 56px
      animation: spin 1s linear infinite


  &__error
    color: #C00
    font-size: 11px
    height: 1em
    display: block
    margin-bottom: 5px
    opacity: 1
    transition: opacity 0.4s ease-in-out, color 0.4s ease-in-out
    &:empty
      opacity: 0

  &__label
    box-sizing: border-box
    padding: 10px 10px 10px 0
    width: 100%
    outline: none
    display: block
    transition: border-color 0.4s ease-in-out
    -webkit-appearance: none

  &__control
    margin: 3px 5px 3px 0
    vertical-align: top


  &--error--req
    .Checkbox__error
      color: #E0A028

@keyframes spin
  0%
    transform: rotate(0turn)
  100%
    transform: rotate(1turn)
